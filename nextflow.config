manifest {
    author = 'Angel Angelov, aangeloo@gmail.com'
    name = 'nextflow-bcl'
    description = 'InterOp - bcl2fastq pipeline'
    homePage = ''
    nextflowVersion = '>=20.01.0'
}
mail {
    smtp.host = 'smtp.gmail.com'
    smtp.port = 587
    // set accordingly in in .profile or .bashrc or whatever, this is application-specific password
    smtp.user = "$GOOGLEUSER"
    smtp.password = "$GOOGLEPASS"
    smtp.auth = true
    smtp.starttls.enable = true
    smtp.starttls.required = true
}

process.container = 'aangeloo/interop-bcl:latest'
docker.enabled = true


profiles {
	test {
			params.runfolder = 's3://illumina-bcl/testdata'
	}
}